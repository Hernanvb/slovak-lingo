<% include ../partials/header %>
  <body id="answerBody">
    <% if (currentUser) { %>
      <!-- Custom fonts for this template-->
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
      <link href="/stylesheets/loggedin-navbar.css" rel="stylesheet">
      <% include ../partials/loggedin-navbar %>
    <% } else { %>
      <% include ../partials/navbar %>
    <% } %>
    <!-- Page Content -->
    <div class="jumbotron jumbotron-fluid">
      <div class="container text-center">
        <div class="row justify-content-end">
          <div class="col-lg-4 col-xs-6">
            <% if (correct) { %>
              <h1 class="display-3 word-break correct">Correct!</h1>
            <% } else { %>
              <h1 class="display-3 word-break wrong">Wrong!</h1>
            <% } %>

          </div>
          <div class="col-lg-4 col-xs-6">
            <% if (numOfQuestions > 0) { %>
              <h2 class="display-3 score-h2"><span class="numerator"><%= counter %></span><span class="slash">/</span><span class="denominator"><%= originalNumOfQuestions %></span></h2>
            <% } else { %>
              <h2 class="display-3 score-h2"><span class="numerator"><%= counter %></span><span class="slash">/</span><span class="numerator"><%= originalNumOfQuestions %></span></h2>
            <% } %>
          </div>
        </div>
        <hr class="my-4">
        <% if (correct) { %>
          <h3 class="display-4 word-break answer-h3"><span id="svkWord"><%= svkArray[index] %></span> <span class="white-500">means</span> </h3><h3 class="display-4 word-break answer-h3" id="engWord"><%= engWord %></h3>
          <% if (svkArray.length > 1) { %>
            <hr class="my-4">
            <h2 class="text-center white-500">Other Correct Answers:</h2>
            <% for (var i = 0; i < svkArray.length; i++) { %>
              <% if (i != index) { %>
                <h3 class="other-answers"><span id="svkWord"><%= svkArray[i] %></span></h3>
              <% } %>
            <% } %>
          <% } %>
        <% } else { %>
            <h3 class="display-4 word-break answer-h3"><span id="svkWord"><%= svkArray[0] %></span> <span class="white-500">means </span> </h3><h3 class="display-4 word-break answer-h3" id="engWord"><%= engWord %></h3>
            <% if (svkArray.length > 1) { %>
              <hr class="my-4">
              <h2 class="text-center white-500">Other Correct Answers:</h2>
              <% for (var i = 1; i < svkArray.length; i++) { %>
                <% if (i != index) { %>
                  <h3 class="other-answers"><span id="svkWord"><%= svkArray[i] %></span></h3>
                <% } %>
              <% } %>
            <% } %>
        <% } %>
        <hr class="my-4">
        <% if (numOfQuestions > 0) { %>
          <a href='/quiz' class="nextPage btn btn-lg btn-outline-info mt-3">Next word</a>
          <% if (currentUser) { %>
            <a href='/quiz/save' class="nextPage btn btn-lg btn-outline-danger mt-3">Save & Exit</a>
          <% } %>
        <% } else { %>
          <a href='/quiz/results' class="nextPage btn btn-lg btn-outline-success mt-3">Get your results!</a>
        <% } %>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
    <script src="/javascripts/client.js"></script>
<% include ../partials/footer %>