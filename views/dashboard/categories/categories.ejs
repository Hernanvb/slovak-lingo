<% include ../partials/header %>

  <body id="page-top" class="sidebar-toggled">

    <% include ../partials/navbar %>

    <div id="wrapper" class="bg-slovak">
      
      <% include ../partials/sidebar %>

      <div id="content-wrapper">

        <div class="container-fluid">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/users/<%= username %>/dashboard/">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Categories</li>
          </ol>

          <!-- Page Content -->
          <!--<h1 class="display-3 word-break-nohypen">Categories</h1>-->
          <!--<hr>-->
          
          <!-- Icon Cards-->
          <div class="row">
            <div class="col-xl-3 col-sm-6 col-6 mb-3">
              <div class="card text-white bg-info o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                    <i class="fas fa-fw fa-clipboard-list"></i>
                  </div>
                  <div>All</div>
                  <div><%= categoriesLength.total %> words</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="/users/<%= username %>/dashboard/categories/all">
                  <span class="float-left">View Details</span>
                  <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                  </span>
                </a>
                  </div>
            </div>
            <% for (var i = 0; i < categoriesKeys.length; i++) { %>
                <div class="col-xl-3 col-sm-6 col-6 mb-3">
                  <div class="card text-white <%= bgColors[i%4] %> o-hidden h-100">
                    <div class="card-body">
                      <div class="card-body-icon">
                        <i class="fas fa-fw <%= categoryIcons[i] %>"></i>
                      </div>
                      <div><%= categoriesNames[i] %></div>
                      <div><%= categoriesLength[categoriesKeys[i]] %> words</div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="/users/<%= username %>/dashboard/categories/<%= categoriesKeys[i] %>">
                      <span class="float-left">View Details</span>
                      <span class="float-right">
                        <i class="fas fa-angle-right"></i>
                      </span>
                    </a>
                  </div>
                </div>
            <% } %>
          </div>

        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright Â© Slovak Lingo 2018</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <% include ../partials/logout-modal %>
    
    <!-- Start Test Modal-->
    <% include ../partials/start-modal %>

    <!-- Bootstrap core JavaScript-->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" integrity="sha384-pjaaA8dDz/5BgdFUPX6M/9SUZv4d12SUPF0axWc+VRZkx5xU3daN+lYb49+Ax+Tl" crossorigin="anonymous"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/javascripts/sb-admin.min.js"></script>

  </body>

</html>